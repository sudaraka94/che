.ram-settings-machine-item
  font-size 12px

  md-item.che-list-item
    border none

  md-item-content
    display block
    border none

    .che-list-item-row
      line-height 47px
      height 47px

.ram-settings-machine-item

  position relative
  background-color $che-white-color
  border 1px solid lighten($very-light-grey-color, 4%)
  z-index 0

  *
    outline none

  &:not(:first-of-type)
    margin-top -1px

  .ram-settings-machine-item-icon
    width 100px
    & > div
      font-size 42px
      filter grayscale(100%) opacity(50%)
